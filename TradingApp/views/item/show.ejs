<%- include('../partials/header.ejs')%>
    <div class="container">
        <div class="card trade-details">
            <div class="card-body">
                <div class="productDescriptionTop">
                    <h3 class="card-title">
                        <%= tradeItem.itemName%>
                    </h3>
                    <form>
                        <button type="submit" class="describe-top-btn btn btn-danger" type="submit" formmethod="GET" formaction="/stories/<%= tradeItem.itemId%>/edit">Edit</button>
                        <button type="submit" class="describe-top-btn btn btn-danger" formmethod="POST" formaction="/trades/<%= tradeItem.itemId%>?_method=DELETE">Delete</button>
                </div>
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-6">
                        <div><img src="<%= tradeItem.itemImage%>" class="trade-details-image"
                                alt="<%= tradeItem.itemName%>"></div>
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-6">
                        <h4 class="box-title mt-5">Product description</h4>
                        <p>
                            <%= tradeItem.itemDescription%>
                        </p>
                        <a href="trades.html" class="btn btn-dark dark-weight-btn">Trade</a>
                        <a class=" btn btn-outline-dark btn-login" href="trades.html">Rate</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>